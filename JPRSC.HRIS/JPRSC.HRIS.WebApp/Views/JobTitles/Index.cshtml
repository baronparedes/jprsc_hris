@{
    ViewBag.Title = "Job Titles";
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>Job Titles</li>
            </ul>
        </div>
        <h1 class="page-title">
            Job Titles
        </h1>
        @Html.Raw(Html.RenderSuccessNotification())
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <a href="@Url.Action("Add", "JobTitles")" class="btn btn-primary">Add Job Title</a>
                </div>
            </div>
        </div>
        <div class="row" ng-controller="JobTitleIndexCtrl as vm">
            <div class="col-sm-12">
                <form role="form">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-search fa-fw" ng-show="!vm.searchInProgress"></i>
                                    <i class="fa fa-refresh fa-pulse fa-fw" ng-show="vm.searchInProgress"></i>
                                </span>
                                <input type="text" class="form-control" ng-model="vm.searchModel.searchTerm" ng-model-options="{ debounce: 500 }" placeholder="" />
                            </div>
                        </div>
                    </div>
                </form>
                <div class="note note-info" ng-show="!vm.jobTitles.length">
                    <p>No job titles found.</p>
                </div>
                <div class="portlet light bordered" ng-show="vm.jobTitles.length">
                    <div class="portlet-title">
                        <div class="caption font-red-sunglo">
                            <i class="fa fa-id-card font-red-sunglo"></i>
                            <span class="caption-subject font-red-sunglo bold uppercase">Job Titles</span>
                        </div>
                    </div>
                    <div class="portlet-body">                        
                        <div class="table-scrollable">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="jobTitle in vm.jobTitles track by jobTitle.id">
                                        <td>{{jobTitle.name}}</td>
                                        <td>
                                            <a href="{{'/JobTitles/Edit?jobTitleId=' + jobTitle.id}}" class="btn btn-primary btn-sm">Edit</a>
                                            <form action="/JobTitles/Delete" method="post" style="display: inline-block;" onsubmit="return confirm('Are you sure you want to delete this record?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="JobTitleId" value="{{jobTitle.id}}" />
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/scriptbundles/jobTitles")
}