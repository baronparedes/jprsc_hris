@model JPRSC.HRIS.WebApp.Features.Accounts.EditOwn.Command

@{
    ViewBag.Title = "Edit Account";
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>Edit Account</li>
            </ul>
        </div>
        <h1 class="page-title">
            Edit Account
        </h1>
        <div class="row">
            <div class="col-sm-12">
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-red-sunglo">
                            <i class="fa fa-user font-red-sunglo"></i>
                            <span class="caption-subject font-red-sunglo bold uppercase">Edit Account</span>
                        </div>
                    </div>
                    <div class="portlet-body form" ng-controller="EditOwnAccountCtrl as vm">
                        <form class="form-horizontal" role="form" method="post" ng-submit="vm.editAccountSubmit($event)">
                            @Html.AntiForgeryToken()
                            <div class="form-body">
                                @Html.TextBoxHorizontalFormGroup("Name")
                                @Html.TextBoxHorizontalFormGroup("UserName")
                                @Html.DropdownHorizontalFormGroup(Model.CompaniesList, "CompanyId", "Default Company")
                                <br />
                                @Html.PasswordBoxHorizontalFormGroup("OldPassword")
                                @Html.PasswordBoxHorizontalFormGroup("NewPassword")
                                @Html.PasswordBoxHorizontalFormGroup("RepeatNewPassword")
                            </div>
                            <div class="form-actions right">
                                <a href="@Url.Action("Index", "Accounts")" class="btn default">Cancel</a>
                                <button type="submit" class="btn green">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/scriptbundles/accounts")
}