@model JPRSC.HRIS.WebApp.Features.Companies.Index.Result

@{
    ViewBag.Title = "Companies";
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>Companies</li>
            </ul>
        </div>
        <h1 class="page-title">
            Companies
        </h1>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <a href="@Url.Action("Add", "Companies")" class="btn btn-primary">Add Company</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                @if (!Model.CompanyProfiles.Any())
                {
                    <div class="note note-info">
                        <p>No companies found.</p>
                    </div>
                }
                else
                {
                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            <div class="caption font-red-sunglo">
                                <i class="fa fa-users font-red-sunglo"></i>
                                <span class="caption-subject font-red-sunglo bold uppercase">Companies</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="table-scrollable">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Code</th>
                                            <th>Name</th>
                                            <th>&nbsp;</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var company in Model.CompanyProfiles)
                                        {
                                            <tr>
                                                <td>@company.Code</td>
                                                <td>@company.Name</td>
                                                <td>@Html.ActionLink("Edit", "Edit", new { CompanyProfileId = company.Id }, new { @class = "btn btn-primary" })</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>