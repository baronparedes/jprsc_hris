@{
    ViewBag.Title = "Companies";
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>Companies</li>
            </ul>
        </div>
        <h1 class="page-title">
            Companies
        </h1>
        @Html.RenderSuccessNotification()
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <a href="@Url.Action("Add", "Companies")" class="btn btn-primary">Add Company</a>
                </div>
            </div>
        </div>
        <div class="row" ng-controller="CompanyIndexCtrl as vm">
            <div class="col-sm-12">
                <form role="form">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-search fa-fw" ng-show="!vm.searchInProgress"></i>
                                    <i class="fa fa-refresh fa-pulse fa-fw" ng-show="vm.searchInProgress"></i>
                                </span>
                                <input type="text" class="form-control" ng-model="vm.searchModel.searchTerm" ng-model-options="{ debounce: 500 }" placeholder="" />
                            </div>
                        </div>
                    </div>
                </form>
                <div class="note note-info" ng-show="!vm.companies.length">
                    <p>No companies found.</p>
                </div>
                <div class="portlet light bordered" ng-show="vm.companies.length">
                    <div class="portlet-title">
                        <div class="caption font-red-sunglo">
                            <i class="fa fa-building font-red-sunglo"></i>
                            <span class="caption-subject font-red-sunglo bold uppercase">Companies</span>
                        </div>
                    </div>
                    <div class="portlet-body">                        
                        <div class="table-scrollable">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Name</th>
                                        <th>Address</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="company in vm.companies track by company.id">
                                        <td>{{company.code}}</td>
                                        <td>{{company.name}}
                                            <span ng-show="company.isDefault" class="badge badge-info">default</span>
                                        </td>
                                        <td>{{company.address}}</td>
                                        <td>{{company.email}}</td>
                                        <td>{{company.phone}}</td>
                                        <td>
                                            <a href="{{'/Companies/Edit?CompanyId=' + company.id}}" class="btn btn-primary btn-sm">Edit</a>
                                            <form action="/Companies/Delete" method="post" style="display: inline-block;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="CompanyId" value="{{company.id}}" />
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/scriptbundles/companies")
}