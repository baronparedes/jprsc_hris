@model JPRSC.HRIS.WebApp.Features.Companies.Details.QueryResult

@{
    ViewBag.Title = "Company " + Model.Name;
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>Company Details</li>
            </ul>
        </div>
        <h1 class="page-title">
            @Model.Name
        </h1>
        <div class="row">
            <div class="col-sm-12">
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-red-sunglo">
                            <i class="fa fa-building font-red-sunglo"></i>
                            <span class="caption-subject font-red-sunglo bold uppercase">@Model.Name</span>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <form class="form-horizontal" role="form" method="post">
                            <div class="form-body">
                                @Html.StaticHorizontalFormGroup("Code")
                                @Html.StaticHorizontalFormGroup("Name")
                                @Html.StaticHorizontalFormGroup("Address")
                                @Html.StaticHorizontalFormGroup("Email")
                                @Html.StaticHorizontalFormGroup("Phone", "Telephone num")
                                @Html.StaticHorizontalFormGroup("SSS", "SSS no.")
                                @Html.StaticHorizontalFormGroup("PagIbig", "Pag-ibig")
                                @Html.StaticHorizontalFormGroup("Registration", "Registration no.")
                                @Html.StaticHorizontalFormGroup("BOI")
                                @Html.StaticHorizontalFormGroup("DateIssued")
                                @Html.StaticHorizontalFormGroup("DTI", "DTI No")
                                @Html.StaticHorizontalFormGroup("PERAA", "PERAA Code No.")
                                @Html.StaticHorizontalFormGroup("VAT", "Vat No.")
                                @Html.StaticHorizontalFormGroup("PhilHealth", "Phil Health No.")
                                @Html.StaticHorizontalFormGroup("PlaceIssued", "Place Issued")
                                @Html.StaticHorizontalFormGroup("SEC", "SEC Reg No.")
                                @Html.StaticHorizontalFormGroup("ZipCode", "Zip Code")
                            </div>
                            <div class="form-actions right">
                                <a href="@Url.Action("Index", "Companies")" class="btn default">Back</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/scriptbundles/companies")
}