@model JPRSC.HRIS.WebApp.Features.CustomRoles.Add.Command

@{
    ViewBag.Title = "Add a Role";
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>Add Role</li>
            </ul>
        </div>
        <h1 class="page-title">
            Add Role
        </h1>
        <div class="row">
            <div class="col-sm-12">
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-red-sunglo">
                            <i class="fa fa-plus font-red-sunglo"></i>
                            <span class="caption-subject font-red-sunglo bold uppercase">Add Role</span>
                        </div>
                    </div>
                    <div class="portlet-body form" ng-controller="AddCustomRoleCtrl as vm">
                        <form class="form-horizontal" role="form" method="post" ng-submit="vm.addCustomRoleSubmit($event)">
                            @Html.AntiForgeryToken()
                            <div class="form-body">
                                @Html.TextBoxHorizontalFormGroup("Name")
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Permissions</label>
                                    <div class="col-md-9">
                                        <div class="mt-checkbox-list">
                                            @for (var i = 0; i < Model.PermissionsList.Count; i++)
                                            {
                                                <input type="hidden" name="@String.Format("PermissionsList[{0}].Value", i)" value="@Model.PermissionsList[i].Value" />
                                                <input type="hidden" name="@String.Format("PermissionsList[{0}].Text", i)" value="@Model.PermissionsList[i].Text" />
                                                <label class="mt-checkbox mt-checkbox-outline">
                                                    <input type="checkbox" name="@String.Format("PermissionsList[{0}].Selected", i)" checked="@Model.PermissionsList[i].Selected" value="true"> @Model.PermissionsList[i].Text
                                                    <span></span>
                                                </label>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions right">
                                <a href="@Url.Action("Index", "CustomRoles")" class="btn default">Cancel</a>
                                <button type="submit" class="btn green">Add</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/scriptbundles/customRoles")    
}