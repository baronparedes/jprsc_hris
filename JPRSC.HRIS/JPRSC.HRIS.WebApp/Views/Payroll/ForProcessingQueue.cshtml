@model JPRSC.HRIS.WebApp.Features.Payroll.ForProcessingQueue.QueryResult

@{
    ViewBag.Title = "For Processing Queue";
}

@section styles
{
    <style>
        tr:hover {
            cursor: pointer;
        }

        th, td {
            height: 20px;
        }

        td > label.checkbox {
            margin-top: 0px;
        }
    </style>    
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>For Processing Queue</li>
            </ul>
        </div>
        <h1 class="page-title">
            For Processing Queue
        </h1>
        @Html.RenderSuccessNotification()
        <div class="row" ng-controller="ForProcessingQueueCtrl as vm" ng-init='vm.serverModel = @Html.NgInit(Model)'>
            <div class="col-sm-12">
                <form role="form">
                    <div class="form-body">
                        <div class="row">
                            @*<div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label">Client</label>
                                    <select class="form-control" ng-model="vm.searchModel.client" ng-options="client.name for client in vm.clients track by client.id" ng-change="vm.searchClicked()"></select>
                                </div>
                            </div>*@
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="control-label">Search by Name</label>
                                    <div class="input-group" style="width: 100%">
                                        <input type="text" class="form-control" ng-model="vm.searchModel.searchTerm" ng-model-options="{ debounce: 500 }" placeholder="" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="note note-info" ng-show="!vm.forProcessingBatches.length">
                    <p>No items found.</p>
                </div>
                <p ng-show="vm.searchInProgress">Loading...</p>
                <div class="portlet light bordered" ng-show="vm.forProcessingBatches.length">
                    <div class="portlet-body">
                        <div class="table-scrollable fit-to-portlet">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <td>Name</td>
                                        <td>&nbsp;</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="forProcessingBatch in vm.forProcessingBatches track by forProcessingBatch.id">
                                        <td>{{forProcessingBatch.name}}</td>
                                        <td>
                                            <a ng-href="/Payroll/ExportQueueToDTRExcel?forProcessingBatchId={{forProcessingBatch.id}}" id="downloadDTRExcelLink" class="btn btn-primary" style="margin-right: 20px;">Download DTR Template</a>
                                            <a ng-href="/Payroll/ExportQueueToEDRExcel?forProcessingBatchId={{forProcessingBatch.id}}" id="downloadEDRExcelLink" class="btn btn-primary" style="margin-right: 20px;">Download EDR Template</a>
                                            <form action="/Payroll/DeleteForProcessingBatch" method="post" style="display: inline-block;" onsubmit="return confirm('Are you sure you want to delete this record?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="ForProcessingBatchId" value="{{forProcessingBatch.id}}" />
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/scriptbundles/payroll")
}