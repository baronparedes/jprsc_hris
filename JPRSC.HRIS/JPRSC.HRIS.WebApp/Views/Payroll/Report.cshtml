@model JPRSC.HRIS.WebApp.Features.Payroll.Report.QueryResult
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Payroll Report for @Model.PayrollProcessBatchResult.Client.Name</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=PT+Serif" rel="stylesheet">
    <style>
        body {
            font-family: 'PT Serif', serif;
        }

        .payroll-table td {
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <h3>Job Placement Resources Services Cooperative</h3>
                <h4>Payroll Report for @Model.PayrollProcessBatchResult.Client.Name</h4>
                <h5>For the period @Model.PayrollProcessBatchResult.PayrollPeriodFromFormatted to @Model.PayrollProcessBatchResult.PayrollPeriodToFormatted (@Model.PayrollProcessBatchResult.PayrollPeriodFormatted payroll period)</h5>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-striped table-bordered payroll-table">
                    <thead>
                        <tr>
                            <th>&nbsp;</th>
                            <th>&nbsp;</th>
                            <th>Taxable Income</th>
                            <th>Regular Pay</th>
                            <th>Overtime</th>
                            <th>UT/Tardy</th>
                            <th>COLA</th>
                            <th>Adjust</th>
                            <th>Total Earnings</th>
                            <th>SSS Prem</th>
                            <th>Pag-Ibig</th>
                            <th>Cash Adv.</th>
                            <th>PHIC</th>
                            <th>Total Deductions</th>
                            <th>Net Pay</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payrollRecord in Model.PayrollRecords)
                        {
                            <tr>
                                <td>@payrollRecord.EmployeeCode</td>
                                <td style="text-align: left;">@payrollRecord.EmployeeName</td>
                                <td>@payrollRecord.TaxableIncome</td>
                                <td>@payrollRecord.RegularPay</td>
                                <td>@payrollRecord.OverTime</td>
                                <td>@payrollRecord.UTTardy</td>
                                <td>@payrollRecord.COLA</td>
                                <td>@payrollRecord.Adjust</td>
                                <td><strong>@payrollRecord.TotalEarnings</strong></td>
                                <td>@payrollRecord.SSS</td>
                                <td>@payrollRecord.PagIbig</td>
                                <td>@payrollRecord.CashAdv</td>
                                <td>@payrollRecord.PHIC</td>
                                <td><strong>@payrollRecord.TotalDeductions</strong></td>
                                <td><strong>@payrollRecord.NetPay</strong></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>