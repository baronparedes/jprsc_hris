@model JPRSC.HRIS.WebApp.Features.Reports.GenerateSingleLoanType.QueryResult
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.LoanTypeResult.Code Report for @String.Format("{0}", String.IsNullOrWhiteSpace(Model.ClientName) ? "All Clients" : Model.ClientName)</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=PT+Serif" rel="stylesheet">
    <style>
        body {
            font-family: 'PT Serif', serif;
        }

        .payroll-table td {
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <h3>Job Placement Resources Services Cooperative</h3>
                <h4>@Model.LoanTypeResult.Code Report for @String.Format("{0}", String.IsNullOrWhiteSpace(Model.ClientName) ? "All Clients" : Model.ClientName)</h4>
                @if (Model.PayrollPeriodMonthMonth.HasValue)
                {
                    <h5>For payroll period month @Model.PayrollPeriodMonthMonth.ToString() @Model.PayrollPeriodYear</h5>
                }
                else
                {
                    <h5>For all payroll period months @Model.PayrollPeriodYear</h5>
                }
                <h5>@(Model.LoanRecords.Count - 1) record/s total</h5>
            </div>
        </div>
        @if (!Model.LoanRecords.Any())
        {
            <div class="row">
                <div class="col-sm-12">
                    <p class="lead">No records found.</p>
                </div>
            </div>
        }
        else
        {
            <div class="row hidden-print">
                <div class="col-sm-12">
                    <div class="form-group">
                        <a href="@Url.Action("GenerateSingleLoanType", new { ClientId = Model.ClientId, LoanTypeId = Model.LoanTypeId, PayrollPeriodMonth = Model.PayrollPeriodMonth, PayrollPeriodYear = Model.PayrollPeriodYear, Destination = "Excel" })" class="btn btn-primary" style="margin-right: 20px;">Download Excel</a>
                        @if (String.IsNullOrWhiteSpace(Model.DisplayMode))
                        {
                            <button class="btn btn-primary" disabled="disabled">Sort by Name</button>
                            <a href="@Url.Action("GenerateSingleLoanType", new { ClientId = Model.ClientId, LoanTypeId = Model.LoanTypeId, PayrollPeriodMonth = Model.PayrollPeriodMonth, PayrollPeriodYear = Model.PayrollPeriodYear, DisplayMode = "Branch" })" class="btn btn-primary">Group by Branch</a>
                        }
                        else if (Model.DisplayMode == "Branch")
                        {
                            <a href="@Url.Action("GenerateSingleLoanType", new { ClientId = Model.ClientId, LoanTypeId = Model.LoanTypeId, PayrollPeriodMonth = Model.PayrollPeriodMonth, PayrollPeriodYear = Model.PayrollPeriodYear })" class="btn btn-primary">Sort by Name</a>
                            <button class="btn btn-primary" disabled="disabled">Group by Branch</button>
                        }
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    @if (String.IsNullOrWhiteSpace(Model.DisplayMode))
                    {
                        <table class="table table-striped table-bordered payroll-table">
                            <thead>
                                <tr>
                                    <th>Employee SSS No.</th>
                                    <th>Last Name</th>
                                    <th>First Name</th>
                                    <th>Middle Initial</th>
                                    <th>Loan Type</th>
                                    <th>Loan Date</th>
                                    <th>Loan Amount</th>
                                    <th>Penalty</th>
                                    <th>Amount Due</th>
                                    <th>Monthly Amortization</th>
                                    <th>AMPSDG</th>
                                    <th>Status</th>
                                    <th>Effective Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var sssRecord in Model.LoanRecords)
                                {
                                    <tr>
                                        @foreach (var cell in sssRecord.DisplayLine)
                                        {
                                            <td>@cell</td>
                                        }
                                    </tr>
                                }
                                <tr>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>@String.Format("{0:n}", Model.LoanRecords.Sum(sr => sr.Loan.PrincipalAmount.GetValueOrDefault()))</td>
                                    <td>&nbsp;</td>
                                    <td>@String.Format("{0:n}", Model.LoanRecords.Sum(sr => sr.Loan.RemainingBalanceForDisplay.GetValueOrDefault()))</td>
                                    <td>@String.Format("{0:n}", Model.LoanRecords.Sum(sr => sr.DeductionAmount.GetValueOrDefault()))</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                </tr>
                            </tbody>
                        </table>
                    }
                    else if (Model.DisplayMode == "Branch")
                    {
                        foreach (var sssRecord in Model.LoanRecords.Where(pr => pr.Loan.Employee.Department == null))
                        {
                            sssRecord.Loan.Employee.Department = new Department { Id = 0, Name = "No Branch" };
                        }

                        var groupedByBranch = Model.LoanRecords.GroupBy(pr => new { pr.Loan.Employee.Department.Id, pr.Loan.Employee.Department.Name });
                        foreach (var group in groupedByBranch.OrderBy(g => g.Key.Name))
                        {
                            <h2>@group.Key.Name</h2>
                            <table class="table table-striped table-bordered payroll-table">
                                <thead>
                                    <tr>
                                        <th>Employee SSS No.</th>
                                        <th>Last Name</th>
                                        <th>First Name</th>
                                        <th>Middle Initial</th>
                                        <th>Loan Type</th>
                                        <th>Loan Date</th>
                                        <th>Loan Amount</th>
                                        <th>Penalty</th>
                                        <th>Amount Due</th>
                                        <th>Monthly Amortization</th>
                                        <th>AMPSDG</th>
                                        <th>Status</th>
                                        <th>Effective Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sssRecord in group)
                                    {
                                        <tr>
                                            @foreach (var cell in sssRecord.DisplayLine)
                                            {
                                                <td>@cell</td>
                                            }
                                        </tr>
                                    }
                                    <tr>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>@String.Format("{0:n}", group.Sum(sr => sr.Loan.PrincipalAmount.GetValueOrDefault()))</td>
                                        <td>&nbsp;</td>
                                        <td>@String.Format("{0:n}", group.Sum(sr => sr.Loan.RemainingBalanceForDisplay.GetValueOrDefault()))</td>
                                        <td>@String.Format("{0:n}", group.Sum(sr => sr.DeductionAmount.GetValueOrDefault()))</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                    </tr>
                                </tbody>
                            </table>
                        }
                    }
                </div>
            </div>
        }
    </div>
</body>
</html>