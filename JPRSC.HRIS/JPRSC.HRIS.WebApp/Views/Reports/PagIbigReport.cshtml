@model JPRSC.HRIS.WebApp.Features.Reports.GeneratePagIbig.QueryResult
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PagIbig Report for @String.Format("{0}", String.IsNullOrWhiteSpace(Model.ClientName) ? "All Clients" : Model.ClientName))</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=PT+Serif" rel="stylesheet">
    <style>
        body {
            font-family: 'PT Serif', serif;
        }

        .payroll-table td {
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <h3>Job Placement Resources Services Cooperative</h3>
                <h4>PagIbig Report for @String.Format("{0}", String.IsNullOrWhiteSpace(Model.ClientName) ? "All Clients" : Model.ClientName))</h4>
                @if (Model.PayrollPeriodMonthMonth.HasValue)
                {
                    <h5>For payroll period month @Model.PayrollPeriodMonthMonth.ToString()</h5>
                }
                else
                {
                    <ht>For all payroll period months</ht>
                }
                <h5>@(Model.PagIbigRecords.Count - 1) record/s total</h5>
            </div>
        </div>
        @if (!Model.PagIbigRecords.Any())
        {
            <div class="row">
                <div class="col-sm-12">
                    <p class="lead">No records found.</p>
                </div>
            </div>
        }
        else
        {
            <div class="row hidden-print">
                <div class="col-sm-12">
                    <div class="form-group">
                        <a href="@Url.Action("GeneratePagIbig", new { ClientId = Model.ClientId, PayrollPeriodMonth = Model.PayrollPeriodMonth, Destination = "Excel" })" class="btn btn-primary" style="margin-right: 20px;">Download Excel</a>
                        @if (String.IsNullOrWhiteSpace(Model.DisplayMode))
                        {
                            <button class="btn btn-primary" disabled="disabled">Sort by Name</button>
                            <a href="@Url.Action("GeneratePagIbig", new { ClientId = Model.ClientId, PayrollPeriodMonth = Model.PayrollPeriodMonth, DisplayMode = "Branch" })" class="btn btn-primary">Group by Branch</a>
                        }
                        else if (Model.DisplayMode == "Branch")
                        {
                            <a href="@Url.Action("GeneratePagIbig", new { ClientId = Model.ClientId, PayrollPeriodMonth = Model.PayrollPeriodMonth })" class="btn btn-primary">Sort by Name</a>
                            <button class="btn btn-primary" disabled="disabled">Group by Branch</button>
                        }
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    @if (String.IsNullOrWhiteSpace(Model.DisplayMode))
                    {
                        <table class="table table-striped table-bordered payroll-table">
                            <thead>
                                <tr>
                                    <th>Company PagIbig No.</th>
                                    <th>&nbsp;</th>
                                    <th>Employee PagIbig No.</th>
                                    <th>Last Name</th>
                                    <th>First Name</th>
                                    <th>&nbsp;</th>
                                    <th>Middle Initial</th>
                                    <th>Deduction Basis</th>
                                    <th>&nbsp;</th>
                                    <th>Date Generated</th>
                                    <th>&nbsp;</th>
                                    <th>PagIbig Employer Share</th>
                                    <th>PagIbig Employee Share</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pagIbigRecord in Model.PagIbigRecords)
                                {
                                    <tr>
                                        @foreach (var cell in pagIbigRecord.DisplayLine)
                                        {
                                            <td>@cell</td>
                                        }
                                    </tr>
                                }
                                <tr>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>@String.Format("{0:n}", Model.PagIbigRecords.Sum(sr => sr.PagIbigDeductionBasis))</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>@String.Format("{0:n}", Model.PagIbigRecords.Sum(sr => sr.TotalPagIbigEmployer))</td>
                                    <td>@String.Format("{0:n}", Model.PagIbigRecords.Sum(sr => sr.TotalPagIbigEmployee))</td>
                                </tr>
                            </tbody>
                        </table>
                    }
                    else if (Model.DisplayMode == "Branch")
                    {
                        foreach (var pagIbigRecord in Model.PagIbigRecords.Where(pr => pr.Employee.Department == null))
                        {
                            pagIbigRecord.Employee.Department = new Department { Id = 0, Name = "No Branch" };
                        }

                        var groupedByBranch = Model.PagIbigRecords.GroupBy(pr => new { pr.Employee.Department.Id, pr.Employee.Department.Name });
                        foreach (var group in groupedByBranch.OrderBy(g => g.Key.Name))
                        {
                            <h2>@group.Key.Name</h2>
                            <table class="table table-striped table-bordered payroll-table">
                                <thead>
                                    <tr>
                                        <th>Company PagIbig No.</th>
                                        <th>&nbsp;</th>
                                        <th>Employee PagIbig No.</th>
                                        <th>Last Name</th>
                                        <th>First Name</th>
                                        <th>&nbsp;</th>
                                        <th>Middle Initial</th>
                                        <th>Net pay</th>
                                        <th>&nbsp;</th>
                                        <th>Date Generated</th>
                                        <th>&nbsp;</th>
                                        <th>PagIbig Employer Share</th>
                                        <th>PagIbig Employee Share</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pagIbigRecord in group)
                                    {
                                        <tr>
                                            @foreach (var cell in pagIbigRecord.DisplayLine)
                                            {
                                                <td>@cell</td>
                                            }
                                        </tr>
                                    }
                                    <tr>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>@String.Format("{0:n}", group.Sum(sr => sr.PagIbigDeductionBasis))</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                        <td>@String.Format("{0:n}", group.Sum(sr => sr.TotalPagIbigEmployer))</td>
                                        <td>@String.Format("{0:n}", group.Sum(sr => sr.TotalPagIbigEmployee))</td>
                                    </tr>
                                </tbody>
                            </table>
                        }
                    }
                </div>
            </div>
        }
    </div>
</body>
</html>