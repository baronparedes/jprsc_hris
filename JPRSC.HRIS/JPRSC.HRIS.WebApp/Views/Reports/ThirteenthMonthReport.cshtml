@model JPRSC.HRIS.Features.Reports.GenerateThirteenthMonth.QueryResult
@using System.Collections
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thirteenth Month Report for @String.Format("{0}", String.IsNullOrWhiteSpace(Model.ClientName) ? "All Clients" : Model.ClientName)</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=PT+Serif" rel="stylesheet">
    <style>
        body {
            font-family: 'PT Serif', serif;
        }

        .payroll-table td {
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <h3>Job Placement Resources Services Cooperative</h3>
                <h4>Thirteenth Month Report for @String.Format("{0}", String.IsNullOrWhiteSpace(Model.ClientName) ? "All Clients" : Model.ClientName)</h4>
                <h5>For payroll period year @Model.PayrollPeriodFromYear to @Model.PayrollPeriodToYear</h5>
                <h5>@Model.ThirteenthMonthRecords.Count record/s total</h5>
            </div>
        </div>
        @if (!Model.ThirteenthMonthRecords.Any())
        {
            <div class="row">
                <div class="col-sm-12">
                    <p class="lead">No records found.</p>
                </div>
            </div>
        }
        else
        {
            <div class="row hidden-print">
                <div class="col-sm-12">
                    <div class="form-group">
                        <a href="@Url.Action("GenerateThirteenthMonth", new { ClientId = Model.ClientId, PayrollPeriodFromYear = Model.PayrollPeriodFromYear, PayrollPeriodToYear = Model.PayrollPeriodToYear, FromPayrollPeriodMonth = Model.FromPayrollPeriodMonth, FromPayrollPeriod = Model.FromPayrollPeriod, ToPayrollPeriodMonth = Model.ToPayrollPeriodMonth, ToPayrollPeriod = Model.ToPayrollPeriod, Destination = "Excel" })" class="btn btn-primary" style="margin-right: 20px;">Download Excel</a>
                        @if (String.IsNullOrWhiteSpace(Model.DisplayMode))
                        {
                            <button class="btn btn-primary" disabled="disabled">Sort by Name</button>
                            <a href="@Url.Action("GenerateThirteenthMonth", new { ClientId = Model.ClientId, PayrollPeriodFromYear = Model.PayrollPeriodFromYear, PayrollPeriodToYear = Model.PayrollPeriodToYear, FromPayrollPeriodMonth = Model.FromPayrollPeriodMonth, FromPayrollPeriod = Model.FromPayrollPeriod, ToPayrollPeriodMonth = Model.ToPayrollPeriodMonth, ToPayrollPeriod = Model.ToPayrollPeriod, DisplayMode = "Branch" })" class="btn btn-primary">Group by Branch</a>
                        }
                        else if (Model.DisplayMode == "Branch")
                        {
                            <a href="@Url.Action("GenerateThirteenthMonth", new { ClientId = Model.ClientId, PayrollPeriodFromYear = Model.PayrollPeriodFromYear, PayrollPeriodToYear = Model.PayrollPeriodToYear, FromPayrollPeriodMonth = Model.FromPayrollPeriodMonth, FromPayrollPeriod = Model.FromPayrollPeriod, ToPayrollPeriodMonth = Model.ToPayrollPeriodMonth, ToPayrollPeriod = Model.ToPayrollPeriod })" class="btn btn-primary">Sort by Name</a>
                            <button class="btn btn-primary" disabled="disabled">Group by Branch</button>
                        }
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    @if (String.IsNullOrWhiteSpace(Model.DisplayMode))
                    {
                        <table class="table table-striped table-bordered payroll-table">
                            <thead>
                                <tr>
                                    <th>Employee Name</th>
                                    <th>Employee Code</th>
                                    @foreach (var monthHeader in Model.GetMonthHeaders())
                                    {
                                        <th>@monthHeader</th>
                                    }
                                    <th>HALF</th>
                                    <th>13th Month Pay</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var thirteenthMonthRecord in Model.ThirteenthMonthRecords)
                                {
                                    foreach (var displayLine in thirteenthMonthRecord.DisplayLineCollection)
                                    {
                                        <tr>
                                            @foreach (var cell in displayLine)
                                            {
                                                <td>@cell</td>
                                            }
                                        </tr>
                                    }
                                }
                                <tr>
                                    @foreach (var cell in Model.GetTotals(Model.ThirteenthMonthRecords))
                                    {
                                        <td>@cell</td>
                                    }
                                </tr>
                            </tbody>
                        </table>
                    }
                    else if (Model.DisplayMode == "Branch")
                    {
                        foreach (var sssRecord in Model.ThirteenthMonthRecords.Where(pr => pr.Employee.Department == null))
                        {
                            sssRecord.Employee.Department = new Department { Id = 0, Name = "No Branch" };
                        }

                        var groupedByBranch = Model.ThirteenthMonthRecords.GroupBy(pr => new { pr.Employee.Department.Id, pr.Employee.Department.Name });
                        foreach (var group in groupedByBranch.OrderBy(g => g.Key.Name))
                        {
                            <h2>@group.Key.Name</h2>
                            <table class="table table-striped table-bordered payroll-table">
                                <thead>
                                    <tr>
                                        <th>Employee Name</th>
                                        <th>Employee Code</th>
                                        @foreach (var monthHeader in Model.GetMonthHeaders())
                                        {
                                            <th>@monthHeader</th>
                                        }
                                        <th>HALF</th>
                                        <th>13th Month Pay</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var thirteenthMonthRecord in group)
                                    {
                                        foreach (var displayLine in thirteenthMonthRecord.DisplayLineCollection)
                                        {
                                            <tr>
                                                @foreach (var cell in displayLine)
                                                {
                                                    <td>@cell</td>
                                                }
                                            </tr>
                                        }
                                    }
                                    <tr>
                                        @foreach (var cell in Model.GetTotals(group.ToList()))
                                        {
                                            <td>@cell</td>
                                        }
                                    </tr>
                                </tbody>
                            </table>
                        }
                    }
                </div>
            </div>
        }
    </div>
</body>
</html>