@model JPRSC.HRIS.WebApp.Features.PhicRecords.Edit.Command

@{
    ViewBag.Title = "Edit PHIC Record";
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>Edit PHIC Record</li>
            </ul>
        </div>
        <h1 class="page-title">
            Edit PHIC Record
        </h1>
        <div class="row">
            <div class="col-sm-12">
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-red-sunglo">
                            <i class="fa fa-check font-red-sunglo"></i>
                            <span class="caption-subject font-red-sunglo bold uppercase">Edit PHIC Record</span>
                        </div>
                    </div>
                    <div class="portlet-body form" ng-controller="EditPhicRecordCtrl as vm" ng-init='vm.serverModel = @Html.NgInit(Model)'>
                        <form class="form-horizontal" role="form" method="post" ng-submit="vm.editPhicRecordSubmit($event)">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.Id)
                            <div class="form-body">
                                @Html.TextBoxHorizontalFormGroup("Percentage")
                                <div ng-class="{ 'has-error': vm.validationErrors.employeePercentageShare }" class="form-group">
                                    <label class="col-md-3 col-lg-2 control-label">Employee Percentage Share</label>
                                    <div class="col-md-9 col-lg-10">
                                        <input type="text" class="form-control" name="EmployeePercentageShare" ng-model="vm.phicRecord.employeePercentageShare" ng-model-options="{ debounce: 500 }">
                                        <span ng-show="vm.validationErrors.employeePercentageShare" class="help-block"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 col-lg-2 control-label">Employer Percentage Share</label>
                                    <div class="col-md-9 col-lg-10">
                                        <p class="form-control-static" ng-bind="100 - vm.phicRecord.employeePercentageShare"></p>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions right">
                                <button type="submit" class="btn green">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/scriptbundles/phicRecords")
}