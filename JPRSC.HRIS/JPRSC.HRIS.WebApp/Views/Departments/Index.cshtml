@{
    ViewBag.Title = "Departments";
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>Departments</li>
            </ul>
        </div>
        <h1 class="page-title">
            Departments
        </h1>
        @Html.RenderSuccessNotification()
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <a href="@Url.Action("Add", "Departments")" class="btn btn-primary">Add Department</a>
                </div>
            </div>
        </div>
        <div class="row" ng-controller="DepartmentIndexCtrl as vm">
            <div class="col-sm-12">
                <form role="form">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-search fa-fw" ng-show="!vm.searchInProgress"></i>
                                    <i class="fa fa-refresh fa-pulse fa-fw" ng-show="vm.searchInProgress"></i>
                                </span>
                                <input type="text" class="form-control" ng-model="vm.searchModel.searchTerm" ng-model-options="{ debounce: 500 }" placeholder="" />
                            </div>
                        </div>
                    </div>
                </form>
                <div class="note note-info" ng-show="!vm.departments.length">
                    <p>No departments found.</p>
                </div>
                <div class="portlet light bordered" ng-show="vm.departments.length">
                    <div class="portlet-title">
                        <div class="caption font-red-sunglo">
                            <i class="fa fa-building font-red-sunglo"></i>
                            <span class="caption-subject font-red-sunglo bold uppercase">Departments</span>
                        </div>
                    </div>
                    <div class="portlet-body">                        
                        <div class="table-scrollable">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="department in vm.departments track by department.id">
                                        <td>{{department.name}}</td>
                                        <td>
                                            <a href="{{'/Departments/Edit?departmentId=' + department.id}}" class="btn btn-primary btn-sm">Edit</a>
                                            <form action="/Departments/Delete" method="post" style="display: inline-block;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="DepartmentId" value="{{department.id}}" />
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/scriptbundles/departments")
}