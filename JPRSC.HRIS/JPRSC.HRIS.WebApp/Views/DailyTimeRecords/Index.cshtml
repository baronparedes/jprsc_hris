            </div>

            <script type="text/ng-template" id="addDailyTimeRecordModal.html">
                <form class="form-horizontal" role="form" method="post" ng-submit="vm.addDailyTimeRecordSubmit($event)">
                    <div class="modal-header">
                        <h3 class="modal-title">Add Daily Time Record for {{vm.client.name}}</h3>
                    </div>
                    <div class="modal-body">
                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 col-lg-2 control-label">Employee</label>
                                <div class="col-md-9 col-lg-10">
                                    <input type="hidden" name="EmployeeId" value="{{vm.employee.id}}" />
                                    <select class="form-control" ng-model="vm.employee" ng-options="employee.name for employee in vm.employees track by employee.id"></select>
                                    <span ng-show="vm.validationErrors.employeeId" class="help-block"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group" ng-class="{ 'has-error': vm.validationErrors.daysWorked }">
                                        <label class="col-md-8 col-lg-9 control-label">No. of Days</label>
                                        <div class="col-md-4 col-lg-3">
                                            <input type="text" class="form-control" name="DaysWorked" ng-model="vm.daysWorked" />
                                            <span ng-show="vm.validationErrors.daysWorked" class="help-block"></span>
                                        </div>
                                    </div>
                                    <div class="form-group" ng-class="{ 'has-error': vm.validationErrors.hoursWorked }">
                                        <label class="col-md-8 col-lg-9 control-label">No. of Hours</label>
                                        <div class="col-md-4 col-lg-3">
                                            <input type="text" class="form-control" name="Hours Worked" ng-model="vm.hoursWorked" />
                                            <span ng-show="vm.validationErrors.hoursWorked" class="help-block"></span>
                                        </div>
                                    </div>
                                    <div class="form-group" ng-class="{ 'has-error': vm.validationErrors.hoursLate }">
                                        <label class="col-md-8 col-lg-9 control-label">Total Hours Late</label>
                                        <div class="col-md-4 col-lg-3">
                                            <input type="text" class="form-control" name="HoursLate" ng-model="vm.hoursLate" />
                                            <span ng-show="vm.validationErrors.hoursLate" class="help-block"></span>
                                        </div>
                                    </div>
                                    <div class="form-group" ng-class="{ 'has-error': vm.validationErrors.hoursUndertime }">
                                        <label class="col-md-8 col-lg-9 control-label">Total Hours Undertime</label>
                                        <div class="col-md-4 col-lg-3">
                                            <input type="text" class="form-control" name="HoursUnderTime" ng-model="vm.hoursUndertime" />
                                            <span ng-show="vm.validationErrors.hoursUndertime" class="help-block"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-md-4 col-lg-3 control-label">Amount:</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="hidden" value="{{vm.daysWorkedValue}}" />
                                            <p class="form-control-static">{{vm.currencySymbol}}{{vm.daysWorkedValue | number:2}}</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 col-lg-3 control-label">Amount:</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="hidden" value="{{vm.hoursWorkedValue}}" />
                                            <p class="form-control-static">{{vm.currencySymbol}}{{vm.hoursWorkedValue | number:2}}</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 col-lg-3 control-label">Amount:</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="hidden" value="{{vm.hoursLateValue}}" />
                                            <p class="form-control-static">{{vm.currencySymbol}}{{vm.hoursLateValue | number:2}}</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 col-lg-3 control-label">Amount:</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="hidden" value="{{vm.hoursUndertimeValue}}" />
                                            <p class="form-control-static">{{vm.currencySymbol}}{{vm.hoursUndertimeValue | number:2}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @*<div class="form-group" ng-class="{ 'has-error': vm.validationErrors.transactionNumber }">
                                <label class="col-md-4 col-lg-3 control-label">Transaction Number</label>
                                <div class="col-md-8 col-lg-9">
                                    <input type="text" class="form-control" name="TransactionNumber" ng-model="vm.transactionNumber" />
                                    <span ng-show="vm.validationErrors.transactionNumber" class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group" ng-class="{ 'has-error': vm.validationErrors.employeeId }">
                                <label class="col-md-4 col-lg-3 control-label">Employee <i class="fa fa-refresh fa-pulse fa-fw" ng-show="vm.searchInProgress"></i></label>
                                <div class="col-md-8 col-lg-9">
                                    <input type="hidden" name="EmployeeId" value="{{vm.employee.id}}" />
                                    <select class="form-control" ng-model="vm.employee" ng-options="employee.firstName for employee in vm.employees track by employee.id">
                                        <option value="?" selected="selected">Select employee</option>
                                    </select>
                                    <span ng-show="vm.validationErrors.employeeId" class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group" ng-class="{ 'has-error': vm.validationErrors.loanDate }">
                                <label class="col-md-4 col-lg-3 control-label">Loan Date</label>
                                <div class="col-md-8 col-lg-9">
                                    <input type="text" class="form-control" name="LoanDate" ng-model="vm.loanDate" placeholder="MM/dd/yyyy" />
                                    <span ng-show="vm.validationErrors.loanDate" class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group" ng-class="{ 'has-error': vm.validationErrors.loanTypeId }">
                                <label class="col-md-4 col-lg-3 control-label">Loan Type</label>
                                <div class="col-md-8 col-lg-9">
                                    <select class="form-control" name="LoanTypeId" ng-model="vm.loanTypeId" ng-options="loanType.text for loanType in vm.loanTypesList track by loanType.value">
                                        <option value="?" selected="selected">Select loan type</option>
                                    </select>
                                    <span ng-show="vm.validationErrors.loanTypeId" class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group" ng-class="{ 'has-error': vm.validationErrors.principalAmount }">
                                <label class="col-md-4 col-lg-3 control-label">Principal Amount</label>
                                <div class="col-md-8 col-lg-9">
                                    <input type="text" class="form-control" name="PrincipalAmount" ng-model="vm.principalAmount" />
                                    <span ng-show="vm.validationErrors.principalAmount" class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group" ng-class="{ 'has-error': vm.validationErrors.payrollPeriod }">
                                <label class="col-md-4 col-lg-3 control-label">Payroll Period</label>
                                <div class="col-md-8 col-lg-9">
                                    <select class="form-control" name="PayrollPeriod" ng-model="vm.payrollPeriod" ng-options="payrollPeriod for payrollPeriod in vm.payrollPeriods track by payrollPeriod">
                                        <option value="?" selected="selected">Select payroll period</option>
                                    </select>
                                    <span ng-show="vm.validationErrors.payrollPeriod" class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group" ng-class="{ 'has-error': vm.validationErrors.monthsPayable }">
                                <label class="col-md-4 col-lg-3 control-label">Months Payable</label>
                                <div class="col-md-8 col-lg-9">
                                    <input type="text" class="form-control" name="MonthsPayable" ng-model="vm.monthsPayable" />
                                    <span ng-show="vm.validationErrors.monthsPayable" class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group" ng-class="{ 'has-error': vm.validationErrors.interestRate }">
                                <label class="col-md-4 col-lg-3 control-label">Interest Rate</label>
                                <div class="col-md-8 col-lg-9">
                                    <input type="text" class="form-control" name="InterestRate" ng-model="vm.interestRate" />
                                    <span ng-show="vm.validationErrors.interestRate" class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 col-lg-3 control-label">Interest Amount</label>
                                <div class="col-md-8 col-lg-9">
                                    <p class="form-control-static">{{vm.currencySymbol}}{{vm.getInterestAmount() | number:2 }}</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 col-lg-3 control-label">Deduction Amount</label>
                                <div class="col-md-8 col-lg-9">
                                    <input type="text" class="form-control" name="DeductionAmount" ng-model="vm.deductionAmount" />
                                </div>
                            </div>*@
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn green">Add</button>
                        <a href="" class="btn btn-default" ng-click="vm.cancel()">Cancel</a>
                    </div>
                </form>
            </script>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/scriptbundles/dailyTimeRecords")
}